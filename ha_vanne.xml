                    <command response_required="no">
                        <command_string type="character" http_request_type="GET">api/states/</command_string>
                        <parameter_list>
                            <parameter action_argument="ThermostatAddress" parameter_data_type="character"/>
                            
                        </parameter_list>
                        <delay ms_delay="200"/>
                    </command>

                </command_interface>
            </action>
            
            
        
           
            
